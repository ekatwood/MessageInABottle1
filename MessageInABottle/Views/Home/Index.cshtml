@using MessageInABottle.Models
@model Messages

@{
    ViewBag.Title = "Message in a Bottle";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />
<div>
    
    <center>
        <div class="form-group messagebox">

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.TextBoxFor(m => m.Message, new { @class = "form-control", placeholder = "Write a message...", @Value = "", maxlength = 300 })

                <input type="submit" value="Send Message" class="btn btnstyles messagebtn" />
                <br />
                <span class="errormsg"> @ViewBag.MessageResponse </span>
            }

        </div>

        <hr class="boundaries" />
    </center>
    <h4><span class="anotherbottle">A<span id="another"></span> bottle washes ashore...</span></h4>
    <center>
        <button class="altbtnstyles btn" data-toggle="modal" id="displayMessage">Pick up bottle</button>
        <br />
        <span class="errormsg"id="errorMessage"></span>

        <div class="modal fade" id="messageModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-body">
                        <span id="messageID"></span>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-default" id="keepBottle">Keep</button>
                        <button class="btn btn-default" id="returnBottle">Return</button>
                    </div>

                </div>
            </div>



        </div>

    </center>
</div>

<script type='text/javascript'>
$(document).ready(function () {

    var m = "";
    var id = "";

    $('#displayMessage').click(function () {

        $.ajax({

            url: '/Home/DisplayMessage',
            dataType: "json",
            success: function (data) {
                
                m = data["message"];
                id = data["id"];

                $('#messageID').html(m);
                $('#messageModal').modal("show");
                    
            }
        });        
    });

    $('#keepBottle').click(function () {

        $.ajax({

            type: 'POST',
            data: { 'messageid': id },
            url: '/Home/KeepBottle',
            dataType: 'json',
            success: function (data) {

                if (data["errorMessage"] == '') {
                    window.location.href = '/Account/Login';
                }

                $('#messageModal').modal("hide");
                $('#another').html(data["another"]);
                $('#errorMessage').html(data["errorMessage"]);
            },
            error: function () {
                $('#messageModal').modal("hide");
            }
        });
    });

    $('#returnBottle').click(function () {

        $.ajax({

            type: 'POST',
            data: { 'messageid': id },
            url: '/Home/ReturnBottle',
            dataType: 'json',
            success: function (data) {

                $('#messageModal').modal("hide");
                $('#another').html(data["another"]);
                $('#errorMessage').html(data["errorMessage"]);
            },
            error: function () {
                $('#messageModal').modal("hide");
            }
        });
    });



});
</script>